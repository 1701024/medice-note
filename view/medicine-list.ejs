<div class="section-header">
    <h1>薬一覧</h1>
</div>

<% if (typeof data.success.message !== "undefined") { %>
    <div class="alert alert-danger alert-dismissible show fade">
        <div class="alert-body">
            <button class="close" data-dismiss="alert">
                <span>×</span>
            </button>
            <%= data.success.message %>
        </div>
    </div>
<% } %>

<% if (typeof data.error.message !== "undefined") { %>
    <div class="alert alert-danger alert-dismissible show fade">
        <div class="alert-body">
            <button class="close" data-dismiss="alert">
                <span>×</span>
            </button>
            <%= data.error.message %>
        </div>
    </div>
<% } %>

<% if (typeof data.medicine_list !== "undefined") { %>
    <% if (data.medicine_list.length === 0) { %>
        <div class="col-12 mb-4" style="padding-left: unset; padding-right: unset;">
            <div class="hero bg-primary text-white">
                <div class="hero-inner">
                    <p class="lead">
                        登録されている薬情報が見つかりませんでした
                    </p>
                    <div class="mt-4">
                        <a href="/medicine-register" class="btn btn-outline-white btn-lg btn-icon icon-left">
                            <i class="fas fa-plus"></i> 薬情報を登録
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="card">
            <div class="card-body pb-0">
                <div class="table-responsive">
                    <table class="table table-bordered table-md">
                        <tbody>
                        <tr class="text-center">
                            <th>ID</th>
                            <th>薬名</th>
                            <th>病院名</th>
                            <th>個数</th>
                            <th>処方日</th>
                            <th>期間</th>
                            <th>種類</th>
                            <th>画像</th>
                            <th>説明</th>
                            <th></th>
                        </tr>
                        <% for (var i = 0; i < data.medicine_list.length; i++) { %>
                            <tr>
                                <td><%= data.medicine_list[i]['medicine_id'] %></td>
                                <td><%= data.medicine_list[i]['medicine_name'] %></td>
                                <td><%= data.medicine_list[i]['hospital_name'] %></td>
                                <td><%= data.medicine_list[i]['number'] %>個</td>
                                <td><%= data.medicine_list[i]['starts_date'] %></td>
                                <td><%= data.medicine_list[i]['period'] %>日</td>
                                <td><%= data.medicine_list[i]['type_name'] %></td>
                                <td><%= data.medicine_list[i]['image'] %></td>
                                <td><%= data.medicine_list[i]['description'] %></td>
                                <td>
                                    <div class="dropdown d-inline">
                                        <button class="btn btn-primary dropdown-toggle" type="button"
                                                id="dropdownMenuButton2" data-toggle="dropdown"
                                                aria-haspopup="true" aria-expanded="false">アクション
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item has-icon" href="/">
                                                <i class="fas fa-info-circle"></i>
                                                詳細
                                            </a>
                                            <a class="dropdown-item has-icon" href="/medicine-update/<%= data.medicine_list[i]['medicine_id'] %>">
                                                <i class="far fa-edit"></i>
                                                編集
                                            </a>
                                            <a class="dropdown-item has-icon" href="javascript:medicineDelete(<%= data.medicine_list[i]['medicine_id'] %>)">
                                                <i class="fas fa-trash"></i>
                                                削除
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <% } %>
                    </table>
                </div>
            </div>
        </div>
    <% } %>
<% } %>

<script src="/stisla/modules/sweetalert/sweetalert.min.js"></script>
<script>
    function medicineDelete(medicineId) {
        swal({
            title: '薬情報削除',
            text: 'お薬情報を削除しますか？',
            icon: 'warning',
            buttons: ['キャンセル', '削除'],
            dangerMode: true
        }).then(function (value) {
            if (value) {
                location.href = '/medicine-delete/' + medicineId
            }
        });
    }
</script>