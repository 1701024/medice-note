<div class="section-header">
    <h1>薬情報一覧</h1>
</div>

<% if (typeof data.success.message !== "undefined") { %>
    <div class="alert alert-success alert-dismissible show fade">
        <div class="alert-body">
            <button class="close" data-dismiss="alert">
                <span>×</span>
            </button>
            <%= data.success.message %>
        </div>
    </div>
<% } %>

<% if (typeof data.error.message !== "undefined") { %>
    <div class="alert alert-danger alert-dismissible show fade">
        <div class="alert-body">
            <button class="close" data-dismiss="alert">
                <span>×</span>
            </button>
            <%= data.error.message %>
        </div>
    </div>
<% } %>

<% if (typeof data.medicine_list !== "undefined") { %>
    <% if (data.medicine_list.length === 0) { %>
        <div class="col-12 mb-4 pl-0 pr-0">
            <div class="hero bg-primary text-white">
                <div class="hero-inner">
                    <p class="lead">
                        登録されている薬情報が見つかりませんでした
                    </p>
                    <div class="mt-4">
                        <a href="/medicine-register" class="btn btn-outline-white btn-lg btn-icon icon-left">
                            <i class="fas fa-plus"></i> 薬情報を登録
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="row" style="justify-content: flex-end; padding: 0 16px;">
            <a href="javascript:void(0)" class="btn btn-icon icon-left btn-primary mr-2" id="modal-setting-button">
                <i class="fas fa-tasks"></i> 表示設定
            </a>
            <a href="javascript:void(0)" class="btn btn-icon icon-left btn-primary">
                <i class="fas fa-bell"></i> 通知設定
            </a>
        </div>

        <!-- setting modal -->
        <form class="modal-part" id="modal-setting-layout">
            <p>この設定はブラウザごとに保存されます</p>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="checkboxMedicineName" id="checkboxMedicineName" checked disabled>
                <label class="custom-control-label" for="checkboxMedicineName">薬名</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="checkboxHospitalName" id="checkboxHospitalName" checked>
                <label class="custom-control-label" for="checkboxHospitalName">病院名</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="checkboxNumber" id="checkboxNumber" checked>
                <label class="custom-control-label" for="checkboxNumber">飲む個数</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="checkboxTakeTime" id="checkboxTakeTime">
                <label class="custom-control-label" for="checkboxTakeTime">飲む時間</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="checkboxTypeName" id="checkboxTypeName">
                <label class="custom-control-label" for="checkboxTypeName">種類</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="checkboxGroup" id="checkboxGroup">
                <label class="custom-control-label" for="checkboxGroup">グループ</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="checkboxDescription" id="checkboxDescription">
                <label class="custom-control-label" for="checkboxDescription">説明</label>
            </div>
        </form>
        <!-- end setting modal -->

        <div class="section-body">
            <h2 class="section-title">2020年10月2日</h2>
            <div class="row">
                <% for (var i = 0; i < data.medicine_list.length; i++) { %>
                    <div class="col-12 col-sm-6 col-md-6 col-xl-3">
                        <article class="article">
                            <div class="article-header">
                                <div class="article-image"
                                     data-background="<% if (data.medicine_list[i]['image'] !== '') { %>/upload/<%= data.medicine_list[i]['image'] %><% } else { } %>">
                                </div>
                                <div class="article-title">
                                    <h2>
                                        <a href="/medicine/<%= data.medicine_list[i]['medicine_id'] %>">
                                            <%= data.medicine_list[i]['medicine_name'] %>
                                        </a>
                                    </h2>
                                </div>
                            </div>
                            <div class="article-details">
                                <div class="form-group mb-1">
                                    <label>病院名</label>
                                    <p class="mb-1"><%= data.medicine_list[i]['hospital_name'] %></p>
                                </div>
                                <div class="form-group mb-1">
                                    <label>飲む個数</label>
                                    <p class="mb-1"><%= data.medicine_list[i]['number'] %> 個</p>
                                </div>
                                <div class="form-group mb-1">
                                    <label>飲む時間</label>
                                    <p class="mb-1"><%= data.medicine_list[i]['take_time'] %></p>
                                </div>
                                <div class="form-group mb-1">
                                    <label>処方日数</label>
                                    <p class="mb-1"><%= data.medicine_list[i]['starts_date'] %> から <%= data.medicine_list[i]['period'] %> 日分</p>
                                </div>
                                <div class="form-group mb-1">
                                    <label>種類</label>
                                    <p class="mb-1"><%= data.medicine_list[i]['type_name'] %></p>
                                </div>
                                <div class="form-group">
                                    <label>説明</label>
                                    <% if (data.medicine_list[i]['description'] === undefined || data.medicine_list[i]['description'] === '') { %>
                                        <p>登録されていません</p>
                                    <% } else { %>
                                        <p><%= data.medicine_list[i]['description'] %></p>
                                    <% } %>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <a href="/medicine-update/<%= data.medicine_list[i]['medicine_id'] %>" class="card-link">編集</a>
                                    </div>
                                    <div class="col-6 text-right">
                                        <a href="javascript:medicineDelete(<%= data.medicine_list[i]['medicine_id'] %>)" class="card-link link-danger">削除</a>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                <% } %>
            </div>
