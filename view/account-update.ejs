<main>
    <form action="/account-update" method="post">
        <% if (typeof data.errorMsg.userName !== "undefined" && data.errorMsg.userName !== false) { %>
            <p class="account_update_error_message"><%= data.errorMsg.userName %></p>
        <% } %>
        ユーザー名：<input type="text" name="userName" value="<%= data.request.userName %>"><br>

        <% if (typeof data.errorMsg.mail !== "undefined" && data.errorMsg.mail !== false) { %>
            <p class="account_update_error_message"><%= data.errorMsg.mail %></p>
        <% } %>
        メール：<input type="text" name="mail" value="<%= data.request.mail %>"><br>

        <% if (typeof data.errorMsg.password !== "undefined" && data.errorMsg.password !== false) { %>
            <p class="account_update_error_message"><%= data.errorMsg.password %></p>
        <% } %>
        パスワード：<input type="text" name="password" value="<%= data.request.password %>">
        <br><input type="submit" value="編集">
    </form>
</main>